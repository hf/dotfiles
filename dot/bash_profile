# .bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
  . ~/.bashrc
fi

# User specific environment and startup programs

EDITOR=vim
export EDITOR

PATHCONF='$PATH'

for pathfile in $HOME/.path.d/*.path;
do
  PATHCONF=$PATHCONF:`/bin/cat $pathfile`
done

PATH=`eval "echo $PATHCONF"`
export PATH
